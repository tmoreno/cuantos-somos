<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/twitter" android:state_pressed="true">
    	<shape>
      		<gradient
                android:startColor="#ffc58c"
                android:endColor="#ff8000"
                android:angle="270" />
      		
      		<corners
                android:radius="3dp" />
    	</shape>
    </item>
    
    <item android:drawable="@drawable/twitter">
        <shape>
      		<gradient
                android:startColor="#ffffff"
                android:endColor="#c0c0c0"
                android:angle="270" />
      		
      		<corners
                android:radius="3dp" />
    	</shape>
    </item>
</selector>
